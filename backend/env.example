# SecureGuard Backend Configuration

# API Configuration
DEBUG=False
SECRET_KEY=your-secret-key-change-in-production

# External API Keys
VIRUSTOTAL_API_KEY=your-virustotal-api-key
GOOGLE_SAFE_BROWSING_API_KEY=your-google-safe-browsing-api-key
GOOGLE_WEB_RISK_API_KEY=your-google-web-risk-api-key
GEMINI_API_KEY=your-gemini-api-key
SOPHOS_AUTH_TOKEN=your-sophos-api-key

# Database Configuration (optional)
DATABASE_URL=sqlite:///./secureguard.db

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Analysis Configuration
MAX_EMAIL_SIZE=10485760  # 10MB
MAX_ATTACHMENT_SIZE=52428800  # 50MB
ANALYSIS_TIMEOUT=30

# Risk Scoring Weights (must sum to 1.0)
HEADER_ANALYSIS_WEIGHT=0.25
LINK_ANALYSIS_WEIGHT=0.30
ATTACHMENT_ANALYSIS_WEIGHT=0.20
CONTENT_ANALYSIS_WEIGHT=0.25

# Risk Thresholds
LOW_RISK_THRESHOLD=30
MEDIUM_RISK_THRESHOLD=60
HIGH_RISK_THRESHOLD=80
